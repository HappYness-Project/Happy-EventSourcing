@using HP.Application.DTOs
@implements IDisposable
<div class="col-8 row">
    @if (_todoService.Todo.SubTodos != null)
    {
        @foreach (TodoItemDto todoItem in _todoService.Todo.SubTodos)
        {
            if (todoItem.IsDone)
            {
                continue;
            }
            <TodoItemElement TodoItem="@todoItem" TodoItemRemoved="DeleteTodoSubItem" ItemMarkedCompleted="StatusCompleteTodoItem" ItemStatusChanged="ChangeTodoItemStatus"></TodoItemElement>
        }
    }
</div>

@if (UpdateTodoItemDialogOpen)
{
    <TodoItemDialog Title="Update TodoItem" Text="@SelectTodoItem.Id"  SelectedTodoItem="@SelectTodoItem" OnClose="@OnUpdateTodoItemDialogClose" TodoItemDialogType=TodoItemDialog.DialogType.Update></TodoItemDialog>
}

