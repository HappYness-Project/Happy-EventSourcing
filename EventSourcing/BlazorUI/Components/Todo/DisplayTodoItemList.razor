@using HP.Application.DTOs
<div class="col-8 row">
    @if (Todo.SubTodos != null)
    {
        @foreach (TodoItemDto todoItem in Todo.SubTodos)
        {
            if (todoItem.IsDone)
            {
                continue;
            }
            <TodoItemElement TodoItem="@todoItem"  TodoItemRemoved="DeleteTodoSubItem" ItemMarkedCompleted="StatusCompleteTodoItem"></TodoItemElement>
        }
    }
</div>

@if (UpdateTodoItemDialogOpen)
{
    <TodoItemDialog Title="Update TodoItem" Text="@SelectTodoItem.Id"  SelectedTodoItem="@SelectTodoItem" OnClose="@OnUpdateTodoItemDialogClose" TodoItemDialogType=TodoItemDialog.DialogType.Update></TodoItemDialog>
}

