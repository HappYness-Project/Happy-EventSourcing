@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>
<input type="text" class="sign-input form-control" placeholder="Username" @oninput="HandleUserNameChanged" />
<p class="welcome-text">Hello @Username</p>


<p role="status">Current count: @currentCount</p>
<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;
    private string Username { get; set; }
    private void IncrementCount()
    {
        currentCount++;
    }

    private void HandleUserNameChanged(ChangeEventArgs eventArgs)
    {
        Username = eventArgs.Value.ToString();
    }
}
