@page "/todos/create"
@inherits TodoBase
@using HP.Application.DTOs
@using HP.Application.Queries.Todos

<h3>Create new Todo</h3>
<div class="todo-form">
    <EditForm EditContext="@EditContext" OnSubmit="OnSubmit">
        <DataAnnotationsValidator />
        Todo Title
        <InputText class="form-control mx-2" @bind-Value="CreateTodoRequest.Title"/>
        Description
        <InputText class="form-control mx-2" @bind-Value="CreateTodoRequest.Description"/>
        Todo Type
        <Dropdown
                TValue="TodoType"
                @bind-SelectedItem="@SelectedTodoTypeDropDownItem"
                SelectableItems="@TodoTypeEnums">
        </Dropdown>

        Start Date
        <InputDate class="form-control mx-2"  @bind-Value="CreateTodoRequest.StartDate"></InputDate>
        Target End Date
        <InputDate class="form-control mx-2"  @bind-Value="CreateTodoRequest.TargetEndDate"></InputDate>

        <button class="sign-button btn btn-primary" type="submit">Add ToDo</button>
    </EditForm>
</div>

