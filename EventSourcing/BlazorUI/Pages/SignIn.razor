@page "/signin"
@inherits SignInBase

<form class="sign-form">
    <p class="welcome-text">Hello @(string.IsNullOrEmpty(User.UserName) ? "User" : User.UserName) - Today is @Day!</p>

    <EditForm Model="@User"> 
        <DataAnnotationsValidator/>
        <input type="text" class="sign-input form-control" placeholder="Username" @bind-value="User.UserName" />
        @*<ValidationInput ValueChangedCallBack="HandleUserNameValueChanged" Value="@Username"></ValidationInput>*@
        <input type="password" class="sign-input form-control" placeholder="Password" @bind-value="User.Password" />
        <ValidationSummary/>
        <button class="sign-button btn btn-primary" type="submit">Sign In</button>

    </EditForm>

    <div class="signup">
        <a href="/signup">Sign Up</a>
    </div>
</form>

