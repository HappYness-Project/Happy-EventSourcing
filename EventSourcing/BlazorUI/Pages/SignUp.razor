@page "/signup"
@inherits SignUpBase

<div class="sign-form">

    <EditForm EditContext="@EditContext">
        <DataAnnotationsValidator />
        <div class="sign-validation">
            <ValidationInput @bind-value="User.UserName"
                             placeholder="Username"
                             Error="@GetError(() => User.UserName)" />
        </div>
        <div class="sign-validation">
            <ValidationInput @bind-value="User.Password"
                             placeholder="Password"
                             type="password"
                             Error="@GetError(() => User.Password)" />
        </div>
        <div class="sign-validation">
            <ValidationInput @bind-value="User.FirstName"
                             placeholder="First Name"
                             Error="@GetError(() => User.FirstName)" />
        </div>
        <div class="sign-validation">
            <ValidationInput @bind-value="User.LastName"
                             placeholder="Last Name"
                             Error="@GetError(() => User.LastName)" />
        </div>
        <div class="sign-validation">
            <ValidationInput @bind-value="User.Email"
                             placeholder="Email Address"
                             Error="@GetError(() => User.Email)" />
        </div>


        <div class="sign-validation">
            <Dropdown
                TValue="HP.Shared.Enums.GenderTypeEnum"
                @bind-SelectedItem="@SelectedGenderTypeDropDownItem"
                SelectableItems="@GenderTypeDropDownItems">
            
            
            </Dropdown>
        </div>



        <button class="sign-button btn btn-primary" type="submit">Sign In</button>
    </EditForm>

    <div class="signup">
        <a href="/signup">Sign up</a>
    </div>

</div>
