        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script src="jquery/dist/jquery.slim.js"></script>
    <script src="bootstrap/js/dist/index.js"></script>
