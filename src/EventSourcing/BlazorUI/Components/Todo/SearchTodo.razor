@using MediatR
<h3>SearchTodo</h3>
<div class="col-8 row">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>TODO ID</th>
                <th>User ID</th>
                <th>Title</th>
                <th>Todo Status</th>
                <th>Button click</th>

            </tr>
        </thead>
        <tbody>

            <tr>
                <td style="text-underline-position:below; cursor:pointer; color:blue" @onclick="@(() => OnClickViewDetails(@SearchedTodo.TodoId))">@SearchedTodo.TodoId</td>
                <td>@SearchedTodo.PersonId</td>
                <td>@SearchedTodo.TodoTitle</td>
                <td>@SearchedTodo.TodoStatus</td>
                <td>
                    <button type="button" class="btn btn-primary" @onclick="@(() => OnClickViewDetails(@SearchedTodo.TodoId))">View Details</button>
                    <button type="button" class="btn btn-danger btn-sm" @onclick="@(()=> OpenDeleteDialog(@SearchedTodo.TodoId))">Delete</button>
                </td>
            </tr>

        </tbody>
    </table>
</div>

                
@if (DeleteDialogOpen)
{
    <DeleteTodoDialog Title="Are you sure?" Text="Do you want to delete this entry?" OnClose="@OnDeleteDialogClose"></DeleteTodoDialog>
}

